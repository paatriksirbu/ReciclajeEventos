<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Contenedor para los botones de navegación entre meses y el texto del mes/año -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Botón para mes anterior -->
        <Button
            android:id="@+id/prev_month_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="<--" />

        <!-- Texto para el mes y año, centrado -->
        <TextView
            android:id="@+id/month_year_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <!-- Botón para mes siguiente -->
        <Button
            android:id="@+id/next_month_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-->" />

    </LinearLayout>

    <!-- TableLayout para los días de la semana y los números -->
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_gravity="center">

        <!-- Fila para los nombres de los días de la semana -->
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cell_border"
                android:gravity="center"
                android:text="Lun" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cell_border"
                android:gravity="center"
                android:text="Mar" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cell_border"
                android:gravity="center"
                android:text="Mié" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cell_border"
                android:gravity="center"
                android:text="Jue" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cell_border"
                android:gravity="center"
                android:text="Vie" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cell_border"
                android:gravity="center"
                android:text="Sab" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cell_border"
                android:gravity="center"
                android:text="Dom" />
        </TableRow>

        <!-- Aquí aparecerán los días del mes -->
        <TableRow
            android:id="@+id/calendar_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TableRow
            android:id="@+id/calendar_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TableRow
            android:id="@+id/calendar_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TableRow
            android:id="@+id/calendar_row_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TableRow
            android:id="@+id/calendar_row_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableLayout>

</LinearLayout>

